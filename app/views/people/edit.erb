<div class="container" style="margin-top: 20px; outline: 1px solid orange;">
	<div class="title_icon"><img src="/person.png"></div><h1>Edit Case Profile</h1>
    <div id='navigation' class="clearfix"></div>
	<div>
		<form class="form-horizontal" role="form" action="/people/<%= @person.id %>" method="post">
		  <input type="hidden" name="_method" value="put">	
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="first_name">First Name:</label>
		    <div class="col-sm-10">
		      <input type="text" class="form-control" id="first_name" name="person[first_name]" value="<%= @person.first_name %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="last_name">Family/Last Name:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="last_name" name="person[last_name]" value="<%= @person.last_name %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="middle_name">Middle Name:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="middle_name" name="person[middle_name]" value="<%= @person.middle_name %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="middle_name">Nickname:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="nickname" name="person[nickname]" value="<%= @person.nickname %>">
		    </div>
		  </div>
		  <div class="form-group">
			  <label class="control-label col-sm-2" for="gender">Gender:</label>
			  <div class="col-sm-10">
			    <label class="radio-inline"><input type="radio" name="person[gender]" <%= "checked='checked'" if @person.gender=='Male' %> value="Male"> Male</label>
			    <label class="radio-inline"><input type="radio" name="person[gender]" <%= "checked='checked'" if @person.gender=='Female' %> value='Female'>Female</label>
		      </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="birthday">Birth date:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="birthday" name="person[birthdate]" value="<%= @person.birthdate %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="parent">Parent's Name:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="parent" name="person[parent_name]" value="<%= @person.parent_name %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="date_detected">Date of Detection:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="date-detected" name="person[date_detected]" value="<%= @person.date_detected %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="form_completed_by">Form Completed by:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="form_completed_by" name="person[form_completed_by]" value="<%= @person.form_completed_by %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="info_transmitted_by">Information Transmitted By:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="info_transmitted_by" name="person[info_transmitted_by]" value="<%= @person.info_transmitted_by %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="notified_by">Notified By:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="notified_by" name="person[notified_by]" value="<%= @person.notified_by %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="notification_group">Notification Group:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="notification_group" name="person[notification_group]" value="<%= @person.notification_group %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="relationship_to_patient">Relationship to patient:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="relationship_to_patient" name="person[relationship_to_patient]" value="<%= @person.relationship_to_patient %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="head_of_household">Head of Houselhold:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="head_of_household" name="person[head_of_household]" value="<%= @person.head_of_household %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="village_district">Village or District:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="village_district" name="person[village_district]" value="<%= @person.village_district %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="country">Country:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="country" name="person[country]" value="<%= @person.country %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="nationality">Nationality:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="nationality" name="person[nationality]" value="<%= @person.nationality %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-sm-2" for="ethnic_group">Ethnic Group:</label>
		    <div class="col-sm-10"> 
		      <input type="text" class="form-control" id="ethnic_group" name="ethnic_group]" value="<%= @person.ethnic_group %>">
		    </div>
		  </div>
		  <div class="form-group"> 
		    <div class="col-sm-offset-2 col-sm-10">
		      <button type="submit" class="btn btn-default">Submit</button>
		    </div>
		  </div>
		</form>
	</div>
</div>